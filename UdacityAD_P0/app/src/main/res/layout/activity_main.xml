<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.csumb.lauramcrae.myappportfolio.MainActivity"
    android:weightSum="1.0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:gravity="center"
        android:text="My Nanodegree Apps!"
        android:padding="10dp" />

    <Button
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/popular_movies"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:layout_width="250dp" />

    <Button
        android:background="#5C6BC0"
        android:id="@+id/stock_hawk"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:layout_width="250dp"
        android:paddingBottom="1dp" />

    <Button
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/build_it_bigger"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:layout_width="250dp" />

    <Button
        android:background="#5C6BC0"
        android:id="@+id/make_your_app_material"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:layout_width="250dp" />

    <Button
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/go_ubiquitous"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:layout_width="250dp" />

    <Button
        android:background="#5C6BC0"
        android:id="@+id/capstone"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:layout_width="250dp" />

</LinearLayout>
